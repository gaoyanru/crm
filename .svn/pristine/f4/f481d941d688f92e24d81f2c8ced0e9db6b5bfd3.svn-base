.title {
  padding-left: 5px;
  font-weight: 600;
  height: 40px;
  line-height: 40px;
  background-color: #337ab7;
}
.clearfix:after{content:"";display:block;height:0;clear:both;visibility:hidden}
.clearfix{*+height:1%;}
.form-group {
  float: left;
}
.fl {
  float: left;
}
.required::before {
  content: '*';
  color: red;
}
.add-icon {
  height: 24px;
  display: inline-block;
  width: 24px;
  text-align: center;
  background-color: #eee;
  border: 1px solid #ccc;
}
.input-width {
  width: 80px;
  height: 30px;
}
.input-width1 {
  width: 100px;
  height: 30px;
}
.amount .contract-inputWidth {
  display: inline-block;
  background-color: #eee;
  width: 100px;
  margin-right: 5px;
  text-align: center;
}
.select-width {
  width: 100%;
}
.input-border {
  height: 34px;
  border-radius: 3px;
  border: 1px solid #ccc;
}
.pay-style {
  height: 34px;
  line-height: 34px;
}
